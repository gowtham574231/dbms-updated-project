generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model combinedquestions {
  id           Int      @id @default(autoincrement())
  question1Id  Int
  question2Id  Int
  combinedText String
  marks        Int
  difficulty   String
  subjectId    Int?
  createdAt    DateTime @default(now())
}

model deletedquestionslog {
  id         Int      @id @default(autoincrement())
  questionId Int
  text       String
  deletedAt  DateTime @default(now())
}

model question {
  id          Int      @id @default(autoincrement())
  text        String
  subject     String
  marks       Int
  difficulty  String
  createdAt   DateTime @default(now())
  subjectCode String?
  tags        Json?
  subjectId   Int?
  subject     subject? @relation(fields: [subjectId], references: [id], map: "Question_subjectId_fkey")

  @@index([subjectId], map: "Question_subjectId_fkey")
}

model subject {
  id        Int        @id @default(autoincrement())
  name      String
  code      String     @unique(map: "Subject_code_key")
  createdAt DateTime   @default(now())
  question  question[]
}

model user {
  id       Int    @id @default(autoincrement())
  email    String @unique(map: "User_email_key")
  password String
}
